{
  "manifest_version": 3,
  "name": "Weather Now",
  "version": "1.0",
  "description": "A cute pixel-art weather widget for your browser.",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "geolocation",
    "storage"
  ],
  "host_permissions": [
    "https://api.openweathermap.org/*"
  ]
}
